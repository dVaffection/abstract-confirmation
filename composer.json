{
    "name":              "dv-affection/abstract-confirmation",
    "description":       "Library provides an abstraction layer upon confirmations of different types",
    "type":              "library",
    "keywords":          [
        "php", "confirmation"
    ],
    "homepage":          "https://github.com/dvAffection/abstract-confirmation",
    "license":           "MIT",
    "authors":           [
        {
            "name":  "dV",
            "email": "dVaffection@gmail.com"
        }
    ],
    "support":           {
        "issues": "https://github.com/dVaffection/abstract-confirmation/issues",
        "source": "https://github.com/dVaffection/abstract-confirmation"
    },
    "minimum-stability": "dev",
    "require":           {
        "php": ">=5.3.0"
    },
    "require-dev":       {
        "phpunit/phpunit":                              "3.8.*",
        "sebastianbergmann/phpunit-skeleton-generator": "1.2.1"
    },
    "repositories":      [
        {
            "type":    "package",
            "package": {
                "name":    "sebastianbergmann/phpunit-skeleton-generator",
                "version": "1.2.1",
                "dist":    {
                    "url":  "https://github.com/sebastianbergmann/phpunit-skeleton-generator/archive/master.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "autoload":          {
        "psr-0": {
            "dVAffection\\AbstractConfirmation\\": "src/"
        }
    },
    "config":            {
        "bin-dir": "bin/"
    }
}
